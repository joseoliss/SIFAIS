@model SIFAIS.Models.RepPreviewListadoActivosVM
@{
    ViewData["Title"] = "Listado de activos";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte Listado de Préstamos</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/contenido-principal.css" rel="stylesheet" />
</head>
<body>
    <div class="contenedor-contenido">
        <p class="contenedor-cabecera">
            <a class="h4 text-muted">Listado de activos</a>
        </p>
        <form asp-action="ListadoActivosRep">
            <div class="contenedor-form-group">
                <div>
                    <label>Tipo activos</label>
                    <div>
                        @Html.DropDownListFor(m => m.TipoActivo.Descripcion, Model.lstTipoActivo, new { @class = "txt-form" })
                    </div>
                </div>
                <div>
                    <label>Estado activos</label>
                    <div>
                        @Html.DropDownListFor(m => m.EstadoActivo.Descripcion, Model.lstEstadoActivo, new { @class = "txt-form" })
                    </div>
                </div>
                <div>
                    <label>Fecha de ingreso Desde</label>
                    <br />
                    <input type="date" asp-for="Desde" class="txt-form" />
                </div>
                <div>
                    <label>Fecha de ingreso Hasta</label>
                    <br />
                    <input type="date" asp-for="Hasta" class="txt-form" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary form-control" />
            </div>
            <div></div>
        </form>

    </div>
</body>
</html>

